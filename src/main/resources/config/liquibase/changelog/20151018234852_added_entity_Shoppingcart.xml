<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="real" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Shoppingcart.
    -->
    <changeSet id="20151018234852" author="jhipster">
        <createTable tableName="SHOPPINGCART">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="session_id" type="varchar(255)"/>
            <column name="menu_item" type="varchar(255)"/>
            <column name="current_user" type="varchar(255)"/>
            <column name="total_cost" type="varchar(255)"/>
        </createTable>
        
        <createTable tableName="SHOPPINGCART_HASMANY">
            <column name="hasmanys_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="shoppingcarts_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="shoppingcarts_id, hasmanys_id" tableName="SHOPPINGCART_HASMANY"/>

        <addForeignKeyConstraint baseColumnNames="shoppingcarts_id"
                                 baseTableName="SHOPPINGCART_HASMANY"
                                 constraintName="fk_shoppingcart_hasmany_menuitem_id"
                                 referencedColumnNames="id"
                                 referencedTableName="SHOPPINGCART"/>

        <addForeignKeyConstraint baseColumnNames="hasmanys_id"
                                 baseTableName="SHOPPINGCART_HASMANY"
                                 constraintName="fk_menuitem_hasmany_shoppingcart_id"
                                 referencedColumnNames="id"
                                 referencedTableName="MENUITEM"/>
        
    </changeSet>
</databaseChangeLog>
